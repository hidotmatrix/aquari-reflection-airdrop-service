# ═══════════════════════════════════════════════════════════
# APP
# ═══════════════════════════════════════════════════════════
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# ═══════════════════════════════════════════════════════════
# MODE
# ═══════════════════════════════════════════════════════════
# fork       = Fast cycles (~20 min) on Anvil fork for testing
# production = Weekly cron schedule on Base mainnet
MODE=fork

# ═══════════════════════════════════════════════════════════
# WORKFLOW CONTROL (Fork Mode Only)
# ═══════════════════════════════════════════════════════════
# AUTO_START:          true = start workflow on server boot
#                      false = wait for manual trigger from dashboard
# START_DELAY_MINUTES: Minutes to wait before starting first cycle
#                      (only applies if AUTO_START=true)
AUTO_START=false
START_DELAY_MINUTES=0

# ═══════════════════════════════════════════════════════════
# FORK MODE TIMING (overrides for fast cycle schedule)
# All values in MINUTES
# ═══════════════════════════════════════════════════════════
SNAPSHOT_INTERVAL=10     # Time between START and END snapshots
CALCULATE_DELAY=5        # Calculate X minutes after END snapshot
AIRDROP_DELAY=5          # Airdrop X minutes after calculation
AUTO_APPROVE=false       # true = skip admin approval

# ═══════════════════════════════════════════════════════════
# MOCK FLAGS
# ═══════════════════════════════════════════════════════════
# MOCK_SNAPSHOTS:    true = fake holder data, false = real Moralis API
# MOCK_TRANSACTIONS: true = simulate tx, false = real blockchain
#
# Recommended combinations:
#   Development:     MOCK_SNAPSHOTS=true,  MOCK_TRANSACTIONS=true
#   Fork Testing:    MOCK_SNAPSHOTS=false, MOCK_TRANSACTIONS=false (with Anvil RPC)
#   Production:      MOCK_SNAPSHOTS=false, MOCK_TRANSACTIONS=false (with mainnet RPC)
MOCK_SNAPSHOTS=false
MOCK_TRANSACTIONS=false

# ═══════════════════════════════════════════════════════════
# DATABASE
# ═══════════════════════════════════════════════════════════
MONGODB_URI=mongodb://localhost:27017/aquari-airdrop

# ═══════════════════════════════════════════════════════════
# REDIS (For BullMQ job queue - optional in development)
# ═══════════════════════════════════════════════════════════
REDIS_URL=redis://localhost:6379

# ═══════════════════════════════════════════════════════════
# ADMIN DASHBOARD CREDENTIALS
# KEEP THESE SECRET!
# ═══════════════════════════════════════════════════════════
ADMIN_USERNAME=aquari_admin
ADMIN_PASSWORD=your_super_secure_password_here_123!
SESSION_SECRET=random_64_char_string_for_session_encryption_abc123xyz

# ═══════════════════════════════════════════════════════════
# MORALIS API (Free Tier: 40,000 CU/day)
# ═══════════════════════════════════════════════════════════
MORALIS_API_KEY=your_moralis_api_key

# ═══════════════════════════════════════════════════════════
# BLOCKCHAIN
# ═══════════════════════════════════════════════════════════
# RPC_URL: The RPC endpoint for transactions
#   - For fork mode: http://localhost:8545 (Anvil)
#   - For production: https://mainnet.base.org (or your own RPC)
#
# Defaults based on MODE:
#   fork: http://localhost:8545
#   production: https://mainnet.base.org
RPC_URL=http://localhost:8545

# ═══════════════════════════════════════════════════════════
# WALLET
# ═══════════════════════════════════════════════════════════
# Required for production mode, auto-generated for fork mode
# PRIVATE_KEY=your_airdropper_wallet_private_key

# ═══════════════════════════════════════════════════════════
# TOKEN CONFIG
# ═══════════════════════════════════════════════════════════
MIN_BALANCE=1000000000000000000000   # 1000 AQUARI in wei (18 decimals)

# ═══════════════════════════════════════════════════════════
# BATCH CONFIG
# ═══════════════════════════════════════════════════════════
BATCH_SIZE=500                # Recipients per transaction (max ~500 for Base)
MAX_GAS_PRICE=50000000000     # 50 gwei max
CONFIRMATIONS=1               # Blocks to wait (1 for fork, 3 for production)

# ═══════════════════════════════════════════════════════════
# QUICK START EXAMPLES
# ═══════════════════════════════════════════════════════════
#
# 1. FORK TESTING (real Moralis data, Anvil fork, manual start):
#    # Start Anvil: anvil --fork-url https://mainnet.base.org
#    MODE=fork
#    AUTO_START=false
#    MOCK_SNAPSHOTS=false
#    MOCK_TRANSACTIONS=false
#    RPC_URL=http://localhost:8545
