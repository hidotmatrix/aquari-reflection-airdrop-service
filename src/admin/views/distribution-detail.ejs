<div class="mb-6">
  <a href="/admin/distributions" class="text-cyan-400 hover:text-cyan-300 text-sm">&larr; Back to Distributions</a>
</div>

<div class="bg-dark-700 border border-dark-500 rounded-xl p-5 mb-6">
  <h1 class="text-xl font-semibold text-white mb-4">Distribution: <span class="font-mono text-cyan-400"><%= distribution.weekId %></span></h1>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm mb-4">
    <div>
      <span class="text-gray-500">Status</span>
      <p class="mt-1">
        <span class="px-2 py-0.5 text-xs rounded-full
          <%= distribution.status === 'completed' ? 'bg-emerald-500/20 text-emerald-400' :
             distribution.status === 'failed' ? 'bg-red-500/20 text-red-400' :
             distribution.status === 'ready' ? 'bg-cyan-500/20 text-cyan-400' :
             'bg-yellow-500/20 text-yellow-400' %>">
          <%= distribution.status %>
        </span>
      </p>
    </div>
    <div>
      <span class="text-gray-500">Eligible Holders</span>
      <p class="text-white font-medium mt-1"><%= distribution.stats?.eligibleHolders?.toLocaleString() || 0 %></p>
    </div>
    <div>
      <span class="text-gray-500">Reward Token</span>
      <p class="text-gray-300 mt-1"><%= distribution.config?.rewardToken || '—' %></p>
    </div>
    <div>
      <span class="text-gray-500">Created</span>
      <p class="text-gray-300 mt-1"><%= new Date(distribution.createdAt).toLocaleDateString() %></p>
    </div>
  </div>
  <% if (batchStats && batchStats.length > 0) { %>
  <div class="flex flex-wrap gap-2">
    <% batchStats.forEach(s => { %>
    <span class="px-2 py-1 text-xs rounded-full
      <%= s._id === 'completed' ? 'bg-emerald-500/20 text-emerald-400' :
         s._id === 'failed' ? 'bg-red-500/20 text-red-400' :
         s._id === 'processing' ? 'bg-cyan-500/20 text-cyan-400' :
         'bg-yellow-500/20 text-yellow-400' %>">
      <%= s._id %>: <%= s.count %>
    </span>
    <% }) %>
  </div>
  <% } %>
</div>

<div class="bg-dark-700 border border-dark-500 rounded-xl overflow-hidden">
  <div class="px-5 py-4 border-b border-dark-500">
    <h2 class="text-base font-medium text-white">Recipients (Top by Reward)</h2>
  </div>
  <table class="w-full">
    <thead>
      <tr class="bg-dark-800/50">
        <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Address</th>
        <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">MIN Balance</th>
        <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Reward</th>
        <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
        <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">TxHash</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-dark-600">
      <% recipients.forEach(r => { %>
      <tr class="hover:bg-dark-600/30 transition-colors">
        <td class="px-5 py-3 font-mono text-sm text-cyan-400"><%= r.address.slice(0,10) %>...<%= r.address.slice(-8) %></td>
        <td class="px-5 py-3 text-sm text-gray-300"><%= r.balances?.min ? (BigInt(r.balances.min) / BigInt(10**18)).toString() : '—' %></td>
        <td class="px-5 py-3 text-sm text-emerald-400 font-medium"><%= r.rewardFormatted %></td>
        <td class="px-5 py-3">
          <span class="px-2 py-0.5 text-xs rounded-full
            <%= r.status === 'completed' ? 'bg-emerald-500/20 text-emerald-400' :
               r.status === 'failed' ? 'bg-red-500/20 text-red-400' :
               'bg-yellow-500/20 text-yellow-400' %>">
            <%= r.status %>
          </span>
        </td>
        <td class="px-5 py-3 font-mono text-xs text-gray-500"><%= r.txHash ? r.txHash.slice(0,10) + '...' : '—' %></td>
      </tr>
      <% }) %>
      <% if (recipients.length === 0) { %>
      <tr>
        <td colspan="5" class="px-5 py-8 text-center text-gray-500 text-sm">No recipients found</td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>

<% if (pagination.totalPages > 1) { %>
<div class="mt-4 flex justify-center gap-2">
  <% for (let i = 1; i <= pagination.totalPages; i++) { %>
  <a href="?page=<%= i %>" class="px-3 py-1 text-sm rounded <%= i === pagination.page ? 'bg-cyan-500 text-white' : 'bg-dark-700 text-gray-400 hover:text-white' %>"><%= i %></a>
  <% } %>
</div>
<% } %>
