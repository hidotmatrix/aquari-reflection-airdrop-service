<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Distribution <%= distribution.weekId %> - AQUARI Airdrop Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('partials/nav') %>
  <main class="max-w-7xl mx-auto py-6 px-4">
    <div class="mb-6"><a href="/admin/distributions" class="text-indigo-600 hover:underline">&larr; Back</a></div>
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h1 class="text-2xl font-bold mb-4">Distribution: <%= distribution.weekId %></h1>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
        <div><span class="text-gray-500">Status:</span> <span class="font-medium"><%= distribution.status %></span></div>
        <div><span class="text-gray-500">Eligible:</span> <span class="font-medium"><%= distribution.stats?.eligibleHolders?.toLocaleString() %></span></div>
        <div><span class="text-gray-500">Reward Token:</span> <span class="font-medium"><%= distribution.config?.rewardToken %></span></div>
        <div><span class="text-gray-500">Created:</span> <span class="font-medium"><%= new Date(distribution.createdAt).toLocaleDateString() %></span></div>
      </div>
      <div class="flex space-x-4">
        <% batchStats.forEach(s => { %>
        <div class="px-3 py-1 rounded text-sm <%= s._id === 'completed' ? 'bg-green-100 text-green-800' : s._id === 'failed' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
          <%= s._id %>: <%= s.count %>
        </div>
        <% }) %>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b"><h2 class="text-lg font-medium">Recipients (Top by Reward)</h2></div>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Address</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">MIN Balance</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Reward</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">TxHash</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% recipients.forEach(r => { %>
          <tr>
            <td class="px-6 py-4 font-mono text-sm"><%= r.address.slice(0,10) %>...<%= r.address.slice(-8) %></td>
            <td class="px-6 py-4"><%= r.balances?.min ? (BigInt(r.balances.min) / BigInt(10**18)).toString() : '-' %></td>
            <td class="px-6 py-4 font-medium"><%= r.rewardFormatted %></td>
            <td class="px-6 py-4"><span class="px-2 py-1 text-xs rounded <%= r.status === 'completed' ? 'bg-green-100 text-green-800' : r.status === 'failed' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>"><%= r.status %></span></td>
            <td class="px-6 py-4 font-mono text-xs"><%= r.txHash ? r.txHash.slice(0,10) + '...' : '-' %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <%- include('partials/pagination', { pagination }) %>
  </main>
</body>
</html>
